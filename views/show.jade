//dynamic content in the indiv. partial file
extends layout.jade

block content

a(href='/') Home Page
  .container-fluid
  h1= title
  p Full Character Info #{title}
    table.table
      thead
        tr
          th Name
          th Email
          th Location
          th Phone Number
          th Facebook
      tbody#addContact
        each contact in contacts
          tr
            td= contact.name
            td= contact.email
            td= contact.loc
            td= contact.phone
            td= contact.face

block scripts
  script(src='js/main.js')
