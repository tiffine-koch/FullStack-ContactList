extends layout.jade


block styles
  //- link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')    

block content
  .container-fluid
  h1= title
  p Welcome to HEY #{title}
  
  table.table
    thead
      tr
        th Name
        th Email
        th Location
        th Phone Number
        th Facebook
    tbody#addContact
      each contact in contacts
        tr
          td= contact.name
          td= contact.email
          td= contact.loc
          td= contact.phone
          td= contact.face

block scripts
  script(src='js/main.js')
